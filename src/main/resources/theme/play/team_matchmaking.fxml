<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:id="teamMatchmakingRoot" fitToWidth="true"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            xmlns="http://javafx.com/javafx/8.0.141"
            fx:controller="com.faforever.client.teammatchmaking.TeamMatchmakingController">
    <content>
        <VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="5.0">
            <children>
                <VBox alignment="CENTER">
                    <VBox spacing="10.0">
                        <GridPane styleClass="card">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="h2" text="%teammatchmaking.title" GridPane.rowIndex="0"/>
                                <HBox GridPane.hgrow="NEVER" spacing="10.0"
                                      GridPane.halignment="RIGHT"
                                      GridPane.rowIndex="1" GridPane.columnIndex="0"
                                      GridPane.valignment="TOP">
                                    <JFXButton fx:id="enterQueueButton" text="%teammatchmaking.enterQueue"
                                               defaultButton="true"
                                               onAction="#onEnterQueueButtonClicked"/>

                                    <JFXButton fx:id="leavePartyButton" text="%teammatchmaking.leaveParty"
                                               defaultButton="true"
                                               onAction="#onLeavePartyButtonClicked" disable="true"/>
                                </HBox>
                                <VBox
                                        GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                                        GridPane.columnIndex="2"
                                        GridPane.valignment="TOP">
                                    <Label fx:id="todoSomeInformation" text="Players in queue: 23"/>
                                    <Label fx:id="todoSomeInformation2"
                                           text="Expected waiting time: soon^TM"/>
                                </VBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </GridPane>
                        <HBox spacing="10.0">
                            <children>
                                <VBox styleClass="card">
                                    <children>
                                        <Label text="abc"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                                <VBox styleClass="card">
                                    <children>
                                        <Label text="abc"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </HBox>
                    </VBox>
                </VBox>
                <JFXButton mnemonicParsing="false" onAction="#showMatchmakingMaps" text="%ranked1v1.showMaps"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </content>
</ScrollPane>
